<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vipavee.link_database.LoginActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/hiplogo" />

    <Button
        android:id="@+id/btn_login"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="102dp"
        android:layout_marginStart="69dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_regis"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:background="@android:color/holo_green_dark"
        android:text="Register"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/e_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:layout_below="@+id/imageLogo"
        android:layout_alignStart="@+id/e_pass"
        android:layout_marginTop="17dp"
        android:layout_alignEnd="@+id/e_pass" />

    <EditText
        android:id="@+id/e_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/btn_login"
        android:layout_alignEnd="@+id/btn_regis"
        android:layout_alignStart="@+id/btn_login" />
</RelativeLayout>
